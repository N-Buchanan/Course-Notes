% format listing environment
\lstset{
	keywordstyle=\color{keywordColour}, % keywords will now be the netbeans default
	language=Java, % you can override this to practically any language you want
	frame=single, % puts a frame around the code block
	commentstyle=\color{commentColour}, % comments will be the netbeans default colour
	numbers=left, % options are none, left, and right (they look terrible with the frame)
	numbersep=15pt, % distance from the line numbers to the code
	showstringspaces=false, % setting this to true shows an underscore-like character in string spaces
	tabsize=2, 
	breaklines=true, % auto-wrap lines 
	breakatwhitespace=true, % only auto-break at whitespace
	numberstyle=\small\color{commentColour}, % make linenumbers the same colour as comments
	stringstyle=\color{stringColour}, % make string colours the netbeans default
	basicstyle=\ttfamily % make the text monospaced 
}


